#:set white (1,1,1,1)
#: set black (0,0,0,1)

<MyLayout>
	orientation: 'vertical'
	spacing: 10
	padding:10
	canvas.before:
		Color:
			rgba: white
		Rectangle: 
			pos: self.x, self.y
			size: self.width, self.height

	BoxLayout:
		id: connection
		orientation: 'vertical'
		size_hint: (1, 0.5)
		pos_hint: {'center_x':0.5}
		spacing: 10
		padding: 10
		canvas.before:
			Color:
				rgba: black
			Line:
				rounded_rectangle: (self.x, self.y, self.width, self.height, 60, 60, 60, 60, 30)

		Label:
			size_hint: (1,0.1)
			text: "SSH Connection"
			color: black
		TextInput:
			id: hostname
			mulitiline: False
			hint_text: "hostname/ip"
		TextInput:
			id: username
			multiline: False
			hint_text: "username"
		TextInput:
			id: password
			multline: False
			hint_text: "password"
		BoxLayout:
			orientation: 'horizontal'
			
			Button:
				text: "search network"
			Button:
				text: "connect"
				on_press: root.connect()

		Label:
			id: connexion_err
			text: root.connexion_error
			color: black

	BoxLayout:
		id: selection
		orientation: 'vertical'
		size_hint: (1, 0.4)
		pos_hint: {'center_x': 0.5}
		padding: 10
		spacing: 10
		canvas.before:
			Color:
				rgba: black
			Line:
				rounded_rectangle: (self.x, self.y, self.width, self.height, 60, 60, 60, 60, 30)
		Label:
			size_hint: (1,0.1)
			text: "file selection"
			color: black
		Button:
			id: file_chooser
			size_hint: (1,0.7)
			text: root.file_chooser_text
			on_press: root.chooser_start()
		Button:
			id: send_btn
			size_hint: (1,0.2)
			text: "send"
			on_press: root.transfer()

	BoxLayout:
		orientation: 'horizontal'
		size_hint: (1, 0.1)
		pos_hint: {'center_x':0.5}

		Label:
			text: "AirShare"
			color: black
